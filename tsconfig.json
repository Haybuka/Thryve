{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@navigation/*": ["src/navigation/*"],
      "@screens/*": ["src/screens/*"],
      "@utils/*": ["src/utils/*"],
      "@theme/*": ["src/config/theme/*"],
      "@api/*": ["src/api/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "exclude": ["node_modules", "ios/Pods"]
}
